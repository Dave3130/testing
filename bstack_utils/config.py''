conf = {
    'app_automate': False,
    'bstack_session': True,
    'skip_session_status': False
}


class Config(object):
    instance = None

    def __init__(self):
        self._conf = conf

    @classmethod
    def get_instance(cls):
        if cls.instance:
            return cls.instance
        return Config()

    def get_property(self, property_name, default_val=None):
        return self._conf.get(property_name, default_val)

    def set_property(self, property_name, property_value):
        self._conf[property_name] = property_value

    def set_skip_session_status(self, val):
        self._conf['skip_session_status'] = bool(val)

    def should_skip_session_status(self):
        return self._conf.get('skip_session_status', False)

